@page "/curso"
@inject HttpClient Http

<PageTitle>Curso</PageTitle>

<h3>Curso</h3>

<button @onclick="ObtenerListaCursos">Obtener lista de cursos</button>

@if (Cursos == null)
{
    //<p><em>Loading... </em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>CursoId</th>
                <th>Nombre</th>
                <th>ProfesorId</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var curso in Cursos)
            {
                <tr>
                    <td>@curso.CursoId</td>
                    <td>@curso.Nombre</td>
                    <td>@curso.ProfesorId</td>
                </tr>
            }
        </tbody>
    </table>
}


@code {
    private ICollection<BlazorAppOrquesta.Curso> Cursos;
    private BlazorAppOrquesta.OrquestaCñ orquestaClient = new OrquestaCñ("https://localhost:7182", new HttpClient());

    private async Task ObtenerListaCursos()
    {
        // Realiza la llamada HTTP para obtener la lista de alumnos
        Cursos = await orquestaClient.CursosAsync();
    }


}



